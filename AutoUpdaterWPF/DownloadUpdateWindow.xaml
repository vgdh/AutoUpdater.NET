<Window x:Class="AutoUpdaterWPFedition.DownloadUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoUpdaterWPFedition"
        mc:Ignorable="d"
        Title="DownloadUpdateWindow" 
        Height="150" 
        Width="600" 
        ResizeMode="NoResize"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="74*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="Resources/download.png"></Image>
        <DockPanel Grid.Column="1" Margin="5">
            <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" FontSize="20"> Загрузка обновления</TextBlock>
            <ProgressBar Name="progressBar" Grid.Column="1" Margin="10"></ProgressBar>
        </DockPanel>
    </Grid>
</Window>
